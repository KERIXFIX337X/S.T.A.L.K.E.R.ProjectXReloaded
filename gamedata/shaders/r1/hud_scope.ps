#include "common.h"

struct 	v2p
{
 	float2 	tc0		: TEXCOORD0;	// base
	float4 c0		: COLOR0;
};
//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 	main	( v2p I )	: COLOR
{

float2 tc = I.tc0;

//  float amount = 0.003f; //сила расслоения на цвета.
    float amount = 0.0055f; //сила расслоения на цвета.
//  float amount = 0.009f; //сила расслоения на цвета. //перебор


  float4 col = tex2D    (s_base,tc);
    float2        offset_fringe    = distance( float2( .5f, .5f ), tc ) * float2( amount, amount );
    col.r    =    tex2D( s_base, tc + offset_fringe ).r;
    col.g    =    tex2D( s_base, tc            ).g;
    col.b    =    tex2D( s_base, tc - offset_fringe ).b;

return I.c0 * col;

}
