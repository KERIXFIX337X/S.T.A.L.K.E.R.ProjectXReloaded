[logic]
active = {+bun_antenna_off} sr_idle, {-bun_antenna_off} sr_psy_antenna@good_helmet

[sr_psy_antenna@no_helmet]
eff_intensity = 100
hit_intensity = 100
phantom_prob = 40
min_phantom_idle = 3000
max_phantom_idle = 5000
on_info = {=good_psy_immunity =rad_pass_time} sr_psy_antenna@good_helmet, {=bad_psy_immunity =rad_pass_time} sr_psy_antenna@bad_helmet
on_info2 = {+bun_antenna_off} sr_idle

[sr_psy_antenna@bad_helmet]
eff_intensity = 100
hit_intensity = 30
phantom_prob = 30
min_phantom_idle = 3000
max_phantom_idle = 5000
on_info = {=bad_psy_immunity}, {=good_psy_immunity} sr_psy_antenna@good_helmet, sr_psy_antenna@no_helmet
on_info2 = {+bun_antenna_off} sr_idle

[sr_psy_antenna@good_helmet]
eff_intensity = 100
hit_intensity = 20
phantom_prob = 20
min_phantom_idle = 3000
max_phantom_idle = 5000
on_info = {=good_psy_immunity}, {=bad_psy_immunity} sr_psy_antenna@bad_helmet, sr_psy_antenna@no_helmet
on_info2 = {+bun_antenna_off} sr_idle

[sr_idle]
on_info = {-bun_antenna_off} sr_psy_antenna@good_helmet